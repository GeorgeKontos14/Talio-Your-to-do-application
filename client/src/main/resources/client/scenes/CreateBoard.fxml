<TitledPane animated="false" collapsible="false" minWidth="-Infinity" prefHeight="265.0" prefWidth="459.0" text="Create a new board" onKeyPressed="#handleShortcuts" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.CreateBoardViewCtrl">
    <content>
        <AnchorPane prefHeight="240.0" prefWidth="415.0" style="-fx-background-color: #027883;">
            <children>
                <TextField fx:id="boardName" layoutX="63.0" layoutY="82.0" prefHeight="33.0" prefWidth="328.0" promptText="Board name">
                    <font>
                        <Font size="14.0" />
                    </font></TextField>
                <Button fx:id="submitButton" layoutX="311.0" layoutY="153.0" mnemonicParsing="false" onAction="#createNewBoard" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #00C9A7;" text="Save">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="errorLabel" layoutX="107.0" layoutY="36.0" style="-fx-text-fill: EA4343; -fx-font-weight: bold;" text="Please enter a valid board name" visible="false">
                    <font>
                        <Font size="16.0" />
                    </font></Label>
                <Button fx:id="backButton" layoutX="63.0" layoutY="153.0" mnemonicParsing="false" onAction="#toBoardsOverview" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #00C9A7;" text="Cancel">
